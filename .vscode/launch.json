  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Bot",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["start"],
      "console": "internalConsole",
      "internalConsoleOptions": "neverOpen",
      "runtimeVersion": "20"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Tests",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "test:debug"],
      "console": "internalConsole",
      "internalConsoleOptions": "neverOpen",
      "runtimeVersion": "20"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Tests (Current File)",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "test:debug:nospec", "--", "--spec", "${relativeFile}"],
      "console": "internalConsole",
      "internalConsoleOptions": "neverOpen",
      "runtimeVersion": "20"
    }
  ]
}
